extends base.pug

block style
    style 
        include ../static/style.css
        include ../static/styleContact.css 
block scripts 
    script 
        include ../static/index.js

block content
    div.container
        h1#para Contact Us
        form(action="/contact" method="post") 
            input(type="text" class='input' name='name' placeholder='Enter your Name...')
            input(type="email" class='input' name='email' placeholder='Enter your Email...')
            input(type="phone" class='input' name='number' placeholder='Enter your Number...')
            input(type="text" class='input' name='address' placeholder='Enter your Address...')
            textarea(name="passion", cols="30", rows="10" placeholder='Write more About you...\nPassion, Hobbies, etc')
            button(type="submit" class="btn")
                | Submit